# Supabase PostgreSQL Connection
# Use Session Pool (porta 5432) para operações transacionais
SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres?sslmode=require

# Ou use Transaction Pool (porta 6543) para queries rápidas
# SUPABASE_DB_URL=postgres://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Supabase API Key (opcional, para uso futuro com APIs REST)
SUPABASE_KEY=your-supabase-anon-key

# Server Configuration
PORT=3001
GO_ENV=production

# Database Pool Configuration
DB_MAX_CONNS=20
DB_MIN_CONNS=5
DB_MAX_CONN_LIFETIME=1h
DB_MAX_CONN_IDLE_TIME=30m
