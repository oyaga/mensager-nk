# Development Dockerfile
FROM golang:1.23-alpine AS development

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache git

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Run directly with go run (hot reload via volume mount)
CMD ["go", "run", "cmd/server/main.go"]
